#!/usr/bin/env bash
# Forcibly terminates the 7-highlander process with SIGKILL

# Find the process ID
pid=$(pgrep -f "7-highlander")

# Send SIGKILL (signal 9) if process exists
if [ -n "$pid" ]; then
    kill -9 "$pid"
    echo "Successfully terminated 7-highlander (PID: $pid)"
else
    echo "7-highlander process not found" >&2
    exit 1
fi
